FROM node:18-alpine
WORKDIR /app

# Enable pnpm
RUN corepack enable

# Copy monorepo workspace files to root
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml turbo.json ./

# Create directories for all packages
RUN mkdir -p backend frontend

# Copy package.json files for all packages
COPY backend/package.json ./backend/
COPY frontend/package.json ./frontend/

ENV NODE_ENV=development

# Install all dependencies
RUN pnpm install --frozen-lockfile

# Copy backend source code to backend subdirectory
# In dev mode, this will be overwritten by the volume mount at ./backend:/app/backend
COPY backend ./backend

WORKDIR /app/backend
EXPOSE 5000
CMD ["pnpm", "dev"]
